<div class="card-header">
    @CardHeader
    <button class="btn btn-primary">@CardHeaderButtonText</button>
</div>

@code {
    [Parameter]
    public RenderFragment CardHeader { get; set; }
    
    // com esse parametro não precisa repassar
    [CascadingParameter(Name = "CardHeaderButtonText")]
    public string? CardHeaderButtonText { get; set; }
}